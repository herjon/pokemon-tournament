{% extends 'base.homepage.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    <div class="mx-auto font-body">
        <section>
            <div class="container px-6 py-16 mx-auto text-center">
                <div class="max-w-lg mx-auto">
                    <div class='animate-pulse my-3'>
                        <h1 class="text-3xl font-bold text-gray-800 dark:text-white md:text-4xl">
                            Building Your Pokemon Team Now!
                        </h1>
                    </div>
                    <a href="{{ path('team_create') }}" class="px-6 py-2 mt-6 text-sm font-medium leading-5 text-center text-white capitalize bg-blue-600 rounded-lg hover:bg-blue-500 md:mx-0 md:w-auto focus:outline-none">
                        Start to create team
                    </a>
                </div>

                <div class="flex justify-center mt-10">
                    <div class="w-full h-64 rounded-xl md:w-4/5">
                        <picture>
                            <img src="{{ asset('build/images/homepage/pokemon_logo.png') }}" />
                        </picture>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}